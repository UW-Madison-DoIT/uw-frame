              <destinationFile>${basedir}/target/frame/css/themes/uw-superior.${project.version}.css</destinationFile>
              <filtering>true</filtering>
            </configuration>
          </execution>
          <execution>
            <id>rename-uw-platteville-file</id>
            <phase>compile</phase>
