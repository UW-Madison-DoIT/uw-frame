              <destinationFile>${basedir}/target/frame/css/themes/uw-stevens-point.${project.version}.css</destinationFile>
              <filtering>true</filtering>
            </configuration>
          </execution>
          <execution>
            <id>rename-uw-milwaukee-file</id>
            <phase>compile</phase>
            <goals>
              <goal>rename</goal>
            </goals>
            <configuration>
