              <destinationFile>${basedir}/target/frame/css/themes/uw-river-falls.${project.version}.css</destinationFile>
              <filtering>true</filtering>
            </configuration>
          </execution>
          <execution>
            <id>rename-uw-stevens-point-file</id>
