              <filtering>true</filtering>
            </configuration>
          </execution>
          <execution>
            <id>rename-uw-parkside-file</id>
            <phase>compile</phase>
            <goals>
              <goal>rename</goal>
            </goals>
            <configuration>
              <sourceFile>${basedir}/target/frame/css/themes/uw-parkside.css</sourceFile>
              <destinationFile>${basedir}/target/frame/css/themes/uw-parkside.${project.version}.css</destinationFile>
              <filtering>true</filtering>
            </configuration>
          </execution>
          <execution>
